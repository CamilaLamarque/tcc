<h1>Cadastrar Novo Produto</h1>
<form action="/produtos" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="foto">Foto do Produto:</label>
        <input type="file" class="form-control" id="foto" name="foto" accept="image/*">
    </div>
    <div class="form-group">
        <label for="nome">Nome do Produto:</label>
        <input type="text" class="form-control" id="nome" name="nome" required placeholder="Nome do Produto">
    </div>
    <div class="form-group">
        <label for="descricao">Descrição:</label>
        <textarea id="descricao" class="form-control" name="descricao" required placeholder="Descrição do Produto"></textarea>
    </div>
    <div class="form-group">
        <label for="valor">Valor:</label>
        <input type="number" step="0.01" class="form-control" id="valor" name="valor" required placeholder="Valor do Produto">
    </div>
    <div class="form-group">
        <label for="restricao">Restrição:</label>
        <input type="text" class="form-control" id="restricao" name="restricao" placeholder="Restrições do Produto">
    </div>
    <div class="form-group">
        <label for="indicacao">Indicação:</label>
        <input type="text" class="form-control" id="indicacao" name="indicacao" placeholder="Indicação do Produto">
    </div>
    <div class="form-group">
        <label for="marca">Marca:</label>
        <input type="text" class="form-control" id="marca" name="marca" placeholder="Marca do Produto">
    </div>
    <div class="form-group">
        <label for="items_proce">Referência de Uso:</label>
        <select class="form-control" id="items_proce" name="items_proce" required>
            <% usos.forEach(uso => { %>
                <option value="<%= uso.cod %>"><%= uso.nome %></option>
            <% }) %>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>
