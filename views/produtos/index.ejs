<h1>Lista de produtos</h1>

<!-- Formulário de filtro por uso -->
<form method="GET" action="/produtos">
    <div class="form-group">
        <label for="usa">Filtrar por Uso:</label>
        <select id="usa" name="usa" class="form-control">
            <option value="">Todos os Usos</option>
            <% usos.forEach(uso => { %>
                <option value="<%= uso.cod %>" <%= usoSelecionado == uso.cod ? 'selected' : '' %>><%= uso.nome %></option>
            <% }) %>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Valor</th>
            <th>Restrição</th>
            <th>Indicação</th>
            <th>Marca</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% produtos.forEach(produto => { %>
            <tr>
                <td><%= produto.cod %></td>
                <td><%= produto.nome %></td>
                <td><%= produto.descricao %></td>
                <td><%= produto.valor %></td>
                <td><%= produto.restricao %></td>
                <td><%= produto.indicacao %></td>
                <td><%= produto.marca %></td>
                <td>
                    <a href="/produtos/<%= produto.cod %>" class="btn btn-primary">View</a>
                    <a href="/produtos/<%= produto.cod %>/edit" class="btn btn-warning">Edit</a>
                    <form action="/produtos/<%= produto.cod %>?_method=DELETE" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
