<h1>Lista de Produtos</h1>

<!-- Formulário de filtro por uso -->
<form method="GET" action="/produtos">
    <div class="form-group">
        <label for="items_proce">Filtrar por Uso:</label>
        <select id="items_proce" name="items_proce" class="form-control">
            <option value="">Todos os Usos</option>
            <% usos.forEach(uso => { %>
                <option value="<%= uso.cod %>" <%= usoSelecionado == uso.cod ? 'selected' : '' %>><%= uso.nome %></option>
            <% }) %>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Valor</th>
            <th>Restrição</th>
            <th>Indicação</th>
            <th>Marca</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% produtos.forEach(produtos => { %>
            <tr>
                <td><%= produtos.cod %></td>
                <td><%= produtos.nome || 'Desconhecido' %></td>
                <td><%= produtos.descricao || 'Desconhecido' %></td>
                <td><%= produtos.valor ? produtos.valor.toFixed(2) : 'Desconhecido' %></td>
                <td><%= produtos.restricao || 'N/A' %></td>
                <td><%= produtos.indicacao || 'N/A' %></td>
                <td><%= produtos.marca || 'N/A' %></td>
                <td>
                    <a href="/produtos/<%= produtos.cod %>" class="btn btn-primary">Ver</a>
                    <a href="/produtos/<%= produtos.cod %>/edit" class="btn btn-warning">Editar</a>
                    <form action="/produtos/<%= produtos.cod %>?_method=DELETE" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
