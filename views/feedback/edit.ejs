<h1>Editar Feedback</h1>
<form action="/feedbacks/<%= feedback.cod %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="foto">Foto</label>
        <input type="file" class="form-control" id="foto" name="foto" accept="image/*">
    </div>
    <div class="form-group">
        <label for="comentario">Comentário</label>
        <textarea class="form-control" id="comentario" name="comentario" required><%= feedback.comentario %></textarea>
    </div>
    <div class="form-group">
        <label for="avaliacao">Avaliação (1 a 5)</label>
        <input type="number" class="form-control" id="avaliacao" name="avaliacao" value="<%= feedback.avaliacao %>" min="1" max="5" required>
    </div>
    <div class="form-group">
        <label for="cliente">Cliente</label>
        <select class="form-control" id="cliente" name="cliente" required>
            <% clientes.forEach(cliente => { %>
                <option value="<%= cliente.cod %>" <%= feedback.cliente === cliente.cod ? 'selected' : '' %>><%= cliente.nome %></option>
            <% }) %>
        </select>
    </div>
    <button type="submit" class="btn btn-warning">Salvar</button>
</form>
<a href="/feedbacks" class="btn btn-primary">Voltar para a Lista</a>
