<h1>Cadastrar Nova Agenda</h1>
<form action="/agendas" method="POST">
    <div class="form-group">
        <label for="cliente">Cliente</label>
        <select class="form-control" id="cliente" name="cliente" required>
            <option value="">Selecione um cliente</option>
            <!-- Opções de clientes devem ser geradas dinamicamente -->
        </select>
    </div>
    <div class="form-group">
        <label for="procedimento">Procedimento</label>
        <select class="form-control" id="procedimento" name="procedimento" required>
            <option value="">Selecione um procedimento</option>
            <!-- Opções de procedimentos devem ser geradas dinamicamente -->
        </select>
    </div>
    <div class="form-group">
        <label for="profissional">Profissional</label>
        <input type="text" class="form-control" id="profissional" name="profissional" required autocomplete="off">
    </div>
    <div class="form-group">
        <label for="forma_pag">Forma de Pagamento</label>
        <input type="text" class="form-control" id="forma_pag" name="forma_pag" required autocomplete="off">
    </div>
    <div class="form-group">
        <label for="data">Data</label>
        <input type="date" class="form-control" id="data" name="data" required>
    </div>
    <div class="form-group">
        <label for="hora">Hora</label>
        <input type="time" class="form-control" id="hora" name="hora" required>
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>
