<h1>Listagem de agenda</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>clientes</th>
            <th>procedimentos</th>
            <th>Profissional</th>
            <th>Forma de Pagamento</th>
            <th>Data</th>
            <th>Hora</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        <% agenda.forEach(agenda => { %>
            <tr>
                <td><%= agenda.cod %></td>
                <td><%= agenda.clientesNome %></td> <!-- Supondo que você tenha esse campo -->
                <td><%= agenda.procedimentosNome %></td> <!-- Supondo que você tenha esse campo -->
                <td><%= agenda.profissional %></td>
                <td><%= agenda.forma_pag %></td>
                <td><%= new Date(agenda.data).toLocaleDateString('pt-BR') %></td>
                <td><%= agenda.hora %></td>
                <td>
                    <a href="/agenda/<%= agenda.cod %>" class="btn btn-primary" aria-label="Ver detalhes da agenda">Detalhes</a>
                    <a href="/agenda/<%= agenda.cod %>/edit" class="btn btn-warning" aria-label="Editar agenda">Editar</a>
                    <form action="/agenda/<%= agenda.cod %>?_method=DELETE" method="POST" style="display: inline;" onsubmit="return confirm('Tem certeza que deseja excluir esta agenda?');">
                        <button type="submit" class="btn btn-danger" aria-label="Excluir agenda">Excluir</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
<a href="/agenda/new" class="btn btn-primary">Nova Agenda</a>
