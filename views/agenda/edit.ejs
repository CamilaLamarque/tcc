<h1>Editar Agenda</h1>
<form action="/agenda/<%= agenda.cod %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="clientes">clientes</label>
        <select class="form-control" id="clientes" name="clientes" required>
            <option value="">Selecione um clientes</option>
            <!-- As opções de clientes devem ser geradas dinamicamente -->
            <% clientes.forEach(clientes => { %>
                <option value="<%= clientes.cod %>" <%= clientes.cod === agenda.clientes ? 'selected' : '' %>><%= clientes.nome %></option>
            <% }); %>
        </select>
    </div>
    <div class="form-group">
        <label for="procedimentos">procedimentos</label>
        <select class="form-control" id="procedimentos" name="procedimentos" required>
            <option value="">Selecione um procedimentos</option>
            <!-- As opções de procedimentoss devem ser geradas dinamicamente -->
            <% procedimentos.forEach(procedimentos => { %>
                <option value="<%= procedimentos.cod %>" <%= procedimentos.cod === agenda.procedimentos ? 'selected' : '' %>><%= procedimentos.nome %></option>
            <% }); %>
        </select>
    </div>
    <div class="form-group">
        <label for="profissional">Profissional</label>
        <input type="text" class="form-control" id="profissional" name="profissional" value="<%= agenda.profissional %>" required autocomplete="off">
    </div>
    <div class="form-group">
        <label for="forma_pag">Forma de Pagamento</label>
        <input type="text" class="form-control" id="forma_pag" name="forma_pag" value="<%= agenda.forma_pag %>" required autocomplete="off">
    </div>
    <div class="form-group">
        <label for="data">Data</label>
        <input type="date" class="form-control" id="data" name="data" value="<%= new Date(agenda.data).toISOString().split('T')[0] %>" required>
    </div>
    <div class="form-group">
        <label for="hora">Hora</label>
        <input type="time" class="form-control" id="hora" name="hora" value="<%= agenda.hora %>" required>
    </div>
    <button type="submit" class="btn btn-warning">Salvar</button>
</form>
<a href="/agenda" class="btn btn-primary">Voltar para a Lista</a>
