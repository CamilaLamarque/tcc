<h1>Editar Agenda</h1>
<form action="/agendas/<%= agenda.cod %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="cliente">Cliente</label>
        <select class="form-control" id="cliente" name="cliente" required>
            <option value="">Selecione um cliente</option>
            <!-- As opções de clientes devem ser geradas dinamicamente -->
            <% clientes.forEach(cliente => { %>
                <option value="<%= cliente.cod %>" <%= cliente.cod === agenda.cliente ? 'selected' : '' %>><%= cliente.nome %></option>
            <% }); %>
        </select>
    </div>
    <div class="form-group">
        <label for="procedimento">Procedimento</label>
        <select class="form-control" id="procedimento" name="procedimento" required>
            <option value="">Selecione um procedimento</option>
            <!-- As opções de procedimentos devem ser geradas dinamicamente -->
            <% procedimentos.forEach(procedimento => { %>
                <option value="<%= procedimento.cod %>" <%= procedimento.cod === agenda.procedimento ? 'selected' : '' %>><%= procedimento.nome %></option>
            <% }); %>
        </select>
    </div>
    <div class="form-group">
        <label for="profissional">Profissional</label>
        <input type="text" class="form-control" id="profissional" name="profissional" value="<%= agenda.profissional %>" required autocomplete="off">
    </div>
    <div class="form-group">
        <label for="forma_pag">Forma de Pagamento</label>
        <input type="text" class="form-control" id="forma_pag" name="forma_pag" value="<%= agenda.forma_pag %>" required autocomplete="off">
    </div>
    <div class="form-group">
        <label for="data">Data</label>
        <input type="date" class="form-control" id="data" name="data" value="<%= new Date(agenda.data).toISOString().split('T')[0] %>" required>
    </div>
    <div class="form-group">
        <label for="hora">Hora</label>
        <input type="time" class="form-control" id="hora" name="hora" value="<%= agenda.hora %>" required>
    </div>
    <button type="submit" class="btn btn-warning">Salvar</button>
</form>
<a href="/agendas" class="btn btn-primary">Voltar para a Lista</a>
