<h1>Editar Agenda</h1>
<form action="/agendas/<%= agenda.cod %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="cliente">Cliente</label>
        <input type="text" class="form-control" id="cliente" name="cliente" value="<%= agenda.cliente %>" required>
    </div>
    <div class="form-group">
        <label for="procedimento">Procedimento</label>
        <input type="text" class="form-control" id="procedimento" name="procedimento" value="<%= agenda.procedimento %>" required>
    </div>
    <div class="form-group">
        <label for="profissional">Profissional</label>
        <input type="text" class="form-control" id="profissional" name="profissional" value="<%= agenda.profissional %>" required>
    </div>
    <div class="form-group">
        <label for="forma_pag">Forma de Pagamento</label>
        <input type="text" class="form-control" id="forma_pag" name="forma_pag" value="<%= agenda.forma_pag %>" required>
    </div>
    <div class="form-group">
        <label for="data">Data</label>
        <input type="date" class="form-control" id="data" name="data" value="<%= new Date(agenda.data).toISOString().split('T')[0] %>" required>
    </div>
    <div class="form-group">
        <label for="hora">Hora</label>
        <input type="time" class="form-control" id="hora" name="hora" value="<%= agenda.hora %>" required>
    </div>
    <button type="submit" class="btn btn-warning">Salvar</button>
</form>
<a href="/agendas" class="btn btn-primary">Voltar para a Lista</a>
