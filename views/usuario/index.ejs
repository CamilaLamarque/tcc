<h1>Lista de Usuários</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        <% usuarios.forEach(usuario => { %>
            <tr>
                <td><%= usuario.cod %></td>
                <td><%= usuario.nome %></td>
              
                <td>
                    <a href="/usuario/<%= usuario.cod %>" class="btn btn-primary">Ver</a>
                    <a href="/usuario/<%= usuario.cod %>/edit" class="btn btn-warning">Editar</a>
                    <form action="/usuario/<%= usuario.cod %>?_method=DELETE" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
