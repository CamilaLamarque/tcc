<!-- views/show.ejs -->
<h1>Detalhes do procedimentos</h1>
<p><strong>Código:</strong> <%= procedimentos.cod %></p>
<p><strong>Nome:</strong> <%= procedimentos.nome || 'Desconhecido' %></p>
<p><strong>Descrição:</strong> <%= procedimentos.descricao || 'Desconhecido' %></p>
<p><strong>Valor:</strong> <%= procedimentos.valor ? procedimentos.valor.toFixed(2) : 'Desconhecido' %></p>
<p><strong>Duração:</strong> <%= procedimentos.duracao || 'Desconhecido' %></p>
<a href="/procedimentos" class="btn btn-primary">Voltar para a Lista</a>
