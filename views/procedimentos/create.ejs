<h1>Cadastrar Novo Procedimento</h1>

<form action="/procedimentos" method="POST">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" required placeholder="Nome do Procedimento">
    </div>
    <div class="form-group">
        <label for="descricao">Descrição</label>
        <textarea class="form-control" id="descricao" name="descricao" required placeholder="Descrição do Procedimento"></textarea>
    </div>
    <div class="form-group">
        <label for="valor">Valor</label>
        <input type="number" class="form-control" id="valor" name="valor" required step="0.01" placeholder="Valor do Procedimento">
    </div>

    <button type="submit" class="btn btn-success">Cadastrar</button>
</form>

<a href="/procedimentos" class="btn btn-primary">Voltar para a Lista</a>
