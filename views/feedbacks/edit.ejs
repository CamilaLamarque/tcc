<h1>Editar feedbacks</h1>
<form action="/feedbacks/<%= feedbacks.cod %>?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="foto">Foto</label>
        <input type="file" class="form-control" id="foto" name="foto" accept="image/*" aria-describedby="fotoHelp">
        <small id="fotoHelp" class="form-text text-muted">Selecione uma nova imagem para o feedbacks (opcional).</small>
        <% if (feedbacks.foto) { %>
            <img src="<%= feedbacks.foto %>" alt="Foto do feedbacks" class="img-thumbnail mt-2" style="max-width: 200px;">
        <% } %>
    </div>
    <div class="form-group">
        <label for="comentario">Comentário</label>
        <textarea class="form-control" id="comentario" name="comentario" rows="4" required placeholder="Digite seu comentário aqui..."><%= feedbacks.comentario %></textarea>
    </div>
    <div class="form-group">
        <label for="avaliacao">Avaliação (1 a 5)</label>
        <input type="number" class="form-control" id="avaliacao" name="avaliacao" value="<%= feedbacks.avaliacao %>" min="1" max="5" required placeholder="Digite sua avaliação">
    </div>
    <div class="form-group">
        <label for="clientes">clientes</label>
        <select class="form-control" id="clientes" name="clientes" required>
            <% clientes.forEach(clientes => { %>
                <option value="<%= clientes.cod %>" <%= feedbacks.clientes === clientes.cod ? 'selected' : '' %>><%= clientes.nome %></option>
            <% }) %>
        </select>
    </div>
    <button type="submit" class="btn btn-warning">Salvar</button>
</form>
<a href="/feedbacks" class="btn btn-primary">Voltar para a Lista</a>
